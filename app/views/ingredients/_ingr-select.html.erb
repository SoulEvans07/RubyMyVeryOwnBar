<% content_for :head do %>
  <link rel="stylesheet" href="/assets/igredient-partial.css.scss">
<% end %>
<a class="list-group-item ingr-a">
  <img src="<%= ingr.img %>" alt="<%= ingr.name %>" class="ingr-img"/>
  <h4 class="list-group-item-heading ingr-name"><%= ingr.name %></h4>
  <input name="cocktail[ingredients][]" value=<%= ingr.id %> type="checkbox"
         <% $found = false %>
         <% @cocktail.ingredients.each do |ing| %>
         <% if ing.id == ingr.id
              $found = true
              break %>
         <% end %>
         <% end %>
         <%= $found ? 'checked' : nil %>
    class="ingr-chbox"/>
</a>