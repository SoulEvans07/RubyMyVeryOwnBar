<p id="header2" style="align: justify; font-size: 30px; padding: 30px 0px 10px 20px; color:white; background-color:#378bc1"><%= @cocktail.name %></p>

<div style="padding: 10px 20px 20px 20px">
  <img src="<%= @cocktail.img %>" alt="<%= @cocktail.name %>" width="100px" height="100px" style="float:left"/>
  <h4 id="header4" class="list-group-item-heading" style="float:left; padding: 40px 0px 0px 10px;"><%= @cocktail.name %></h4>
</div>

<div style="padding: 20px; float: none; clear:both">
  <h4>Description</h4>
  <p style="margin: 0% 20% 0% 0%; align: left"><%= @cocktail.description %></p>
</div>

<div style="padding: 20px;">
  <h4>Recipe</h4>
  <p style="margin: 0% 20% 0% 0%; align: left"><%= @cocktail.recipe %></p>
</div>

<div style="padding: 20px; float:none">
  <h4>Ingredients</h4>
  <div class="list-group">

  </div>
</div>

<div class="btn-group btn-group-justified" role="group" style="padding: 0px 20px 20px 20px">
  <div class="btn-group" role="group">
    <button class="btn btn-info" OnClick="location.href='/cocktails/<%= @cocktail.id %>/edit'">Edit</button>
  </div>
  <div class="btn-group" role="group">
    <%= link_to 'Delete', @cocktail, method: :delete, class: 'btn btn-danger', style: 'color: white', data: { confirm: 'Do you want to remove '+@cocktail.name+'. This action can not be undone.' } %>
  </div>
  <div class="btn-group" role="group">
    <button class="btn btn-warning" OnClick="location.href='/cocktails'">Back</button>
  </div>
</div>
